<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="colorControlHighlight">@color/colorAccent</item>

        <item name="android:textColor">@color/colorTextPrimary</item>
        <item name="android:textSize">@dimen/fontSizeBody</item>
        <item name="android:windowBackground">@color/colorPrimaryInverse</item>
        <!--   theme UI controls like checkboxes and text fields -->
        <item name="android:listSelector">?attr/selectableItemBackground</item>
    </style>

    <style name="ToolbarTitleStyle" parent="@style/TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">@dimen/fontSizeTitle1</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!-- Lists -->
    <style name="Widget.List" />

    <style name="Widget.List.Text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Widget.List.Text.Title">
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:textSize">@dimen/fontSizeHighlight1</item>
    </style>


    <style name="Widget.List.Icon">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <style name="Widget.List.Item">
        <item name="android:layout_width">match_parent</item>
        <item name="android:paddingLeft">@dimen/screenEdgeSpaceLeft</item>
        <item name="android:paddingRight">@dimen/screenEdgeSpaceRight</item>
        <item name="android:paddingTop">@dimen/listItemSpaceTop</item>
        <item name="android:paddingBottom">@dimen/listItemSpaceBottom</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">?attr/selectableItemBackground</item>
    </style>

    <style name="Widget.Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dividerSize</item>
        <item name="android:background">@color/ColorDivider</item>
        <item name="android:layout_marginLeft">74dp</item>
    </style>

    <style name="Widget.Layout" />

    <style name="Widget.Layout.Screen">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:paddingBottom">@dimen/screenEdgeSpaceBottom</item>
        <item name="android:paddingTop">@dimen/spaceBetweenContent</item>
        <item name="android:clipToPadding">false</item>
        <item name="android:clipChildren">false</item>
        <item name="android:background">@color/colorPrimaryInverse</item>
    </style>

    <style name="Widget.Text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>

    <style name="Widget.Text.Title">
        <item name="android:textSize">@dimen/fontSizeTitle1</item>
        <item name="android:paddingLeft">@dimen/spaceBetweenContentLarge</item>
        <item name="android:paddingRight">@dimen/spaceBetweenContentLarge</item>
    </style>

    <style name="Widget.WebView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginLeft">@dimen/spaceBetweenContent</item>
        <item name="android:layout_marginRight">@dimen/spaceBetweenContent</item>
    </style>

</resources>
